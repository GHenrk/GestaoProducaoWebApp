@model GestaoProducao_MVC.Models.Apontamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apontamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataInicial" class="control-label"></label>
                <input asp-for="DataInicial" class="form-control" />
                <span asp-validation-for="DataInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFinal" class="control-label"></label>
                <input asp-for="DataFinal" class="form-control" />
                <span asp-validation-for="DataFinal" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Operacao" class="control-label"></label>
                <select asp-for="Operacao" class="form-control" asp-items="Html.GetEnumSelectList<GestaoProducao_MVC.Models.Enums.Operacao>()"></select>
                <span asp-validation-for="Operacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessoId" class="control-label"></label>
                <input asp-for="ProcessoId" class="form-control" />
                <span asp-validation-for="ProcessoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaquinaId" class="control-label"></label>
                <input asp-for="MaquinaId" class="form-control" />
                <span asp-validation-for="MaquinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <input asp-for="FuncionarioId" class="form-control" />
                 <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="TempoTotal" class="control-label"></label>
                <input asp-for="TotalTime" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" readonly />
            </div>



            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
