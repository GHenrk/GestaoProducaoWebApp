<table class="table table-hover table-striped cell-border" id="tabela-processos">
    <thead>
        <tr class="bg-header-table text-black">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPeca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadePeca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdemProduto.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th>Detalhes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoPeca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadePeca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdemProduto.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCriacao)
                </td>
                <td class="d-flex justify-content-center align-items-center">
                    
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm  btn-outline-dark">+ Detalhes</a>
                    @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm  btn-outline-danger">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

