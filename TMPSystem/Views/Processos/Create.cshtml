@model GestaoProducao_MVC.Models.Processo

@{
    ViewData["Title"] = "Novo Processo";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="OrdemProdutoId" class="control-label"></label>
                <input asp-for="OrdemProdutoId" class="form-control" />
                <span asp-validation-for="OrdemProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
            
                <label asp-for="CodigoPeca" class="control-label"></label>
                <input asp-for="CodigoPeca" class="form-control" />
                <span asp-validation-for="CodigoPeca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadePeca" class="control-label"></label>
                <input asp-for="QuantidadePeca" class="form-control" />
                <span asp-validation-for="QuantidadePeca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoEstimado" class="control-label"></label>
                <input type="time" step="2" asp-for="TempoEstimadoSpan" value="00:00:00" class="form-control" />
                <span asp-validation-for="TempoEstimadoSpan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DataCriacao" value="@DateTime.Now" />
                <input type="submit" value="Create" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
