@{
    ViewData["Title"] = "Central de Apontamentos";
}

<div class="d-flex flex-column justify-content-center align-items-center">

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <p>@TempData["MensagemErro"]</p>
        </div>
    }
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <p>@TempData["MensagemSucesso"]</p>
        </div>
    }
    <div class="centralApt">
        <h1 class="tituloApontamento">Apontamento</h1>
        <a class="btn btn-lg btn-outline-success" asp-controller="Apontamentos" asp-action="Create">Iniciar</a>
        <a class="btn btn-lg btn-outline-danger" asp-controller="Apontamentos" asp-action="Finalizar">Encerrar</a>

        <h1 class="tituloParadas">Paradas</h1>
        <a class="btn btn-lg btn-outline-dark btnIniciarParada" asp-controller="RegistroParadas" asp-action="IniciarParada">Informar parada</a>
        <a class="btn btn-lg btn-outline-dark btnEncerrarParada" asp-controller="RegistroParadas" asp-action="EncerrarParada">Encerrar parada</a>

    


    <div class="linkExtra">
        <h1 class="tituloExtras">Consultar</h1>
        <div class="linksContent">
                <a class="btn btn-lg btn-outline-dark btnProcessos" asp-controller="OrdemProdutos" asp-action="Index">OP</a>
            <a class="btn btn-lg btn-outline-dark btnProcessos" asp-controller="Processos" asp-action="Index">Processos</a>
            <a class="btn btn-lg btn-outline-dark btnMaquinas" asp-controller="Maquinas" asp-action="Index">Máquinas</a>
                <a class="btn btn-lg btn-outline-dark btnCodigoParadas" asp-controller="CodigoParadas" asp-action="Index">Motivos de Parada</a>
            <a class="btn btn-lg btn-outline-dark btnFuncionarios" asp-controller="Funcionarios" asp-action="Index">Funcionários</a>
        </div>
    </div>
    </div>
</div>