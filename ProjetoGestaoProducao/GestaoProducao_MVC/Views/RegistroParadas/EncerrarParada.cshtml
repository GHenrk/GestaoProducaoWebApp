@model GestaoProducao_MVC.Models.RegistroParada

@{
    ViewData["Title"] = "Encerrar Parada";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<hr />
<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="EncerrarParada">
            <div class="form-group mt-3">
                <label for="descricao" class="control-label">Observação</label>
                <input type="text" name="descricao" class="form-control"  />
            </div>
            <div class="form-group mt-3">
                <label for="maquinaId" class="control-label">Código Maquina</label>
                <input type="number" name="maquinaId" class="form-control" required />
            </div>

            <div class="d-flex justify-content-center align-items-center gap-2 mt-4">
                <input type="submit" value="Encerrar" class="btn btn-outline-danger" />
                <a asp-controller="Apontamentos" asp-action="CentralApontamentos" class="btn btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
