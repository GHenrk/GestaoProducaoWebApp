@model GestaoProducao_MVC.Models.RegistroParada

@{
    ViewData["Title"] = "Iniciar Parada";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IniciarParada">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoParadaId" class="control-label"></label>
                <input asp-for="CodigoParadaId" class="form-control" />
                <span asp-validation-for="CodigoParadaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="funcionarioId" class="control-label">Código Funcionário:</label>
                <input type="number" name="funcionarioId" class="form-control" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-warning" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
