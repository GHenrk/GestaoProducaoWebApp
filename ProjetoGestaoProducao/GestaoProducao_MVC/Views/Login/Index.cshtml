@model GestaoProducao_MVC.Models.LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "TMP System - Login";
}





@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-dismissible alert-danger mt-4">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <p>@TempData["MensagemErro"]</p>
    </div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-dismissible alert-success mt-4">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <p>@TempData["MensagemSucesso"]</p>
    </div>
}


<div class="conteudoLogin">
    <div class="sobreLogin">
        <img src="~/imgs/logoTmpSystem.png" class="imgLogin" />
        <p class="subLogin"> 
            O TMP System, é um software para gestão de produção aplicado em indústrias de usinagem.
        </p>
        <p class="subLogin--sub">
            Monitoramento de máquinas, Controle de horas, processos e ordens de produção.
        </p>
    </div>

    <div class="formLogin">
        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="mb-3">
                <label asp-for="Login" class="form-label">Login</label>
                <input type="text" class="form-control" asp-for="Login" aria-describedby="emailHelp">
                <span asp-validation-for="Login" class="text-danger"></span>
                <div id="emailHelp" class="form-text">Nós nunca compartilharemos suas informações com ninguém.</div>
            </div>
            <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" class="form-control" asp-for="Senha">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-info">Login</button>
        </form>

        <p class="mb-4 mt-1 text-sm-centeralign-content-center mx-auto">
            Esqueceu sua senha?
            <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient">Redefinir minha senha</a>
        </p>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
